@model IEnumerable<$safeprojectname$.Models.$safeprojectname$User>

@{
    ViewBag.Title = "Users";
}
<div class="page-header"><h1>Users Administration</h1></div>
<div class="row">
    <div class="col-xs-12">
        @if (!Model.Any())
        {

        }
        else
        {
            <div class="row">
                <div class="col-xs-12">
                    <a title="Add New User" class="btn btn-xs btn-app" href="@Url.Action("Register", "Account", new { area = "" })"><i class="ace-icon fa fa-user fa-lg"></i> Add New User</a>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <i class="ace-icon fa fa-user"></i> User Name
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <div class="hidden-sm btn-group">
                                            <a title="Details" class="btn btn-xs btn-app" href="@Url.Action("Details", "Users", new{id=user.Id})"><i class="ace-icon fa fa-list fa-lg"></i> Details</a>
                                            <a title="Edit" class="btn btn-xs btn-app" href="@Url.Action("Edit", "Users", new{id=user.Id})"><i class="ace-icon fa fa-pencil fa-lg"></i> Edit</a>
                                            <a title="Delete" class="btn btn-xs btn-app" href="@Url.Action("Delete", "Users", new{id=user.Id})"><i class="fa fa-trash-o fa-lg"></i> Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        }
    </div>
</div>
